{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:all": "concurrently -k -n VITE,ELECTRON -c blue,green \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@stomp/stompjs": "^7.2.1",
    "axios": "^1.13.3",
    "chart.js": "^4.5.1",
    "livekit-client": "^2.17.0",
    "pinia": "^3.0.4",
    "sockjs-client": "^1.6.1",
    "vue": "^3.5.26",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^4.6.4",
    "vue3-grid-layout-next": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-vue": "^6.0.3",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.ssafy.HearO",
    "productName": "HearO",
    "asar": true,
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../ai/dist/ai-server.exe",
        "to": "ai/ai-server.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "nsis": {
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico"
    }
  }
}
